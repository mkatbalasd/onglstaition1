<a href="/nagl/facilities/new" target="_blank" class="inline-block mb-2 px-3 py-1 bg-blue-600 text-white rounded">إضافة منشأة</a>
<div class="overflow-x-auto">
<table class="min-w-full border border-gray-300 text-center">
  <thead>
    <tr>
      <th>الاسم</th>
      <th>رقم الهوية</th>
      <th>نوع الترخيص</th>
    </tr>
  </thead>
  <tbody>
    <% facilities.forEach(f => { %>
      <tr>
        <td><pre class="codebox"><%= f.Name %></pre></td>
        <td><pre class="codebox"><%= f.IdentityNumber %></pre></td>
        <td><pre class="codebox"><%= f.LicenseType || '' %></pre></td>
      </tr>
      <% }) %>
    </tbody>
</table>
</div>
