<a href="/nagl/vehicles/new" target="_blank" class="inline-block mb-2 px-3 py-1 bg-blue-600 text-white rounded">إضافة مركبة</a>
<div class="overflow-x-auto">
<table class="min-w-full border border-gray-300 text-center">
  <thead>
    <tr>
      <th>رقم اللوحة</th>
      <th>الرقم التسلسلي</th>
      <th>المنشأة</th>
    </tr>
  </thead>
  <tbody>
    <% vehicles.forEach(v => { %>
      <tr>
        <td><pre class="codebox"><%= v.PlateNumber || '' %></pre></td>
        <td><pre class="codebox"><%= v.SerialNumber || '' %></pre></td>
        <td><pre class="codebox"><%= v.Name || '' %></pre></td>
      </tr>
      <% }) %>
    </tbody>
</table>
</div>
