<div class="card card-form">
<form method="POST" action="/nagl/vehicles">
  <div class="mb-3">
    <label class="form-label">المنشأة</label>
    <select name="FacilityID" class="border rounded p-2 w-full">
      <% facilities.forEach(f => { %>
        <option value="<%= f.FacilityID %>" <%= facilityId == f.FacilityID ? 'selected' : '' %>><%= f.Name %></option>
      <% }) %>
    </select>
  </div>
  <div class="mb-3">
    <label class="form-label">رقم اللوحة</label>
    <input type="text" name="PlateNumber" class="border rounded p-2 w-full">
  </div>
  <div class="mb-3">
    <label class="form-label">الرقم التسلسلي</label>
    <input type="text" name="SerialNumber" class="border rounded p-2 w-full">
  </div>
  <button type="submit" class="px-3 py-1 bg-green-600 text-white rounded">حفظ</button>
</form>
</div>
